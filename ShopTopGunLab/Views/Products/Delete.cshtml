
@model Domain.Entities.Product

<style>



    .modal {
        position: absolute;
        left: 50%;
        top: 50%;
        height: 50%;
        transform: translate(-50%, -50%);
        width: auto;
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        padding: 1.6rem 3rem;
        border: 3px solid black;
        border-radius: 5px;
        background: white;
        box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.2);
    }

    .message {
        font-size: 1.1rem;
        margin-bottom: 1.6rem;
        margin-top: 0;
    }

    .Mybtn {
        color: inherit;
        font-family: inherit;
        font-size: inherit;
        background: white;
        padding: 0.3rem 3.4rem;
        border: 3px solid black;
        margin-right: 2.6rem;
        box-shadow: 0 0 0 black;
        transition: all 0.2s;
    }

        .Mybtn:last-child {
            margin: 0;
        }

        .Mybtn:hover {
            box-shadow: 0.4rem 0.4rem 0 black;
            transform: translate(-0.4rem, -0.4rem);
        }

        .Mybtn:active {
            box-shadow: 0 0 0 black;
            transform: translate(0, 0);
        }

    .options {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }
</style>


<div class="">
    <div class="modal-header">
        <p class="message">Are you sure you want to delete this product</p>
    </div>
    <div class="modal-body">
        <dl class="dl-horizontal">
            <p>Id:</p>
            <p>@Html.DisplayFor(model => model.ProductId)</p>

            <p>Product:</p>
            <p>@Html.DisplayFor(model => model.Name)</p>


        </dl>
    </div>
    <div class="options">


        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />

            <input type="submit" class="Mybtn" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="Mybtn">Back to List</a>
        </form>


    </div>
</div>